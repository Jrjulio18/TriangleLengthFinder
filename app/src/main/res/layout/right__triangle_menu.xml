<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Find Base"
        android:layout_marginTop="65dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/baseFinderButton"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:onClick="sendMessage"/>

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Find Height"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/HeightFinderButton"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:onClick="sendMessage"/>

    <Button
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:text="Find Hypotenuse"
    android:layout_marginTop="25dp"
    android:layout_marginLeft="0dp"
    android:id="@+id/HypoFinderButton"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:onClick="sendMessage"
   />

    <Button
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:text="Find Angle"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/AngleFinderButton"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal"
        android:onClick="sendMessage"/>
</LinearLayout>